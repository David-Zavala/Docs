@{
    ViewBag.Title = "Admin - Home Page";
    Layout = "~/Views/Shared/_LayoutHomeAdmin.cshtml";
}

@model List<Practica.Data.Models.Doc>

@section styles {
    <link href="~/Content/styles/homeAdmin.css" rel="stylesheet" />
    <link href="~/Content/styles/modal.css" rel="stylesheet" />
    <link href="~/Content/DataTables/datatables.min.css" rel="stylsheet" />
}

<section class="vh-100 gradient-custom">
    <!-- JPG files modal -->
    <div id="selected-image" class="modal-background hidden">
        <div id="file" class="image-modal">
            <div id="selected-image-buttons" class="disprow justify-content-between">
                <div id="selected-image-options-buttons" class="disprow p-2 mb-1">
                    <a class="btn btn-outline-light btn-sm ButtonDownloadInModal me-2 inModalButtons" href="" target="_blank">Descargar</a>
                    <button class="btn px-3 ddBtn ButtonDeleteInModal" value="">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                            <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z" />
                        </svg>
                        Eliminar
                    </button>
                </div>
                <div class="btn btn-outline-light btn-sm">
                    <a class="btn btn-outline-light btn-sm" id="closeImageModal">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="black" class="bi bi-x-square" viewBox="0 0 16 16">
                            <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                            <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708" />
                        </svg>
                    </a>
                </div>
            </div>
            <div class="image-container">
                <img id="selected-image-object" src="" alt="MDN" />
            </div>
        </div>
    </div>
    <!--------------------->
    <!-- Loading modal -->
    <div id="charging-icon" class="modal-background hidden">
        <div id="loading-icon" class="loading-content">
            <div style="color: rgb(129, 129, 9); text-decoration:solid; text-decoration-color: rgb(129, 129, 9);">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-file-earmark-check" viewBox="0 0 16 16">
                    <path d="M10.854 7.854a.5.5 0 0 0-.708-.708L7.5 9.793 6.354 8.646a.5.5 0 1 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0z" />
                    <path d="M14 14V4.5L9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2M9.5 3A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5z" />
                </svg>
                <h2>Completando registro...</h2>
            </div>
        </div>
    </div>
    <!------------------->
    <!-- Modal for confirm or cancel deleting file/s -->
    <div id="confirmDeletion" class="modal-background hidden">
        <div class="details-modal" style="border-color: dimgrey;">
            <div class="disprow">
                <div class="details-modal-title">
                    <h1>¿Seguro que deseas eliminar los siguientes registros?:</h1>
                </div>
                <div class="btn btn-outline-light btn-sm">
                    <a class="btn btn-outline-light btn-sm closeDeletingModal" fatherModal="confirmDeletion">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="black" class="bi bi-x-square" viewBox="0 0 16 16">
                            <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                            <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708" />
                        </svg>
                    </a>
                </div>
            </div>
            <div class="details-modal-content">
                <p style="color:black;" id="confirmDeletionContent"></p>
            </div>
            <div class="disprow">
                <div class="btn btn-outline-danger btn-sm" id="rejectDeletingModal" fatherModal="confirmDeletion">Cancelar</div>
                <div class="btn btn-outline-success btn-sm" id="acceptDeletingModal" fatherModal="confirmDeletion" option="" fileId="">Aceptar</div>
            </div>
        </div>
    </div>
    <!------------------------->

    <div class="container h-100">
        <div class="">
            <!--col-12 col-md-8 col-lg-6 col-xl-5-->
            <div class="bg-dark text-white w-100" style="border-radius: 1rem;">
                <div class="p-5 text-center">

                    <h2 class="fw-bold mb-2 text-uppercase">Documentos Registrados</h2>
                    <p class="text-white-50 mb-3">Gestión de documentos</p>

                    <div class="table-responsive">
                        <table id="DocsTable" class="">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>Propietario</th>
                                    <th>Email Registrado</th>
                                    <th>Fecha de nacimiento</th>
                                    <th>Edad</th>
                                    <th>Educaci&oacuten</th>
                                    <th>&Uacuteltima Actualizaci&oacuten</th>
                                    <th>Opciones</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th></th>
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>Propietario</th>
                                    <th>Email Registrado</th>
                                    <th>Fecha de nacimiento</th>
                                    <th>Edad</th>
                                    <th>Educaci&oacuten</th>
                                    <th>&Uacuteltima Actualizaci&oacuten</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var doc in Model)
                                {
                                    <tr>
                                        <td class="checkboxCell">
                                            <input id="SelectItem" type="checkbox" class="select SelectItem" value="@doc.Id">
                                            @*<label for="SelectItem" class="checkbox-label form-control form-outline"></label>*@
                                        </td>
                                        <td>@doc.Id</td>
                                        <td>@doc.Name</td>
                                        <td>@doc.Email</td>
                                        <td>@doc.RegisteredEmail</td>
                                        <td>@doc.BirthDate</td>
                                        <td>@doc.Age</td>
                                        <td>@doc.Education</td>
                                        <td>@doc.LastUpdate</td>
                                        <td>
                                            <div class="align-button">
                                                @if (doc.DocPath.EndsWith(".jpg"))
                                                {
                                                    <div class="dropdown">
                                                        <button data-toggle="dropdown" class="btn btn-outline-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-three-dots" viewBox="0 0 16 16">
                                                                <path d="M3 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3m5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3m5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3" />
                                                            </svg>
                                                        </button>
                                                        <ul class="dropdown-menu">
                                                            <li>
                                                                <button class="btn px-3 ddBtn ButtonViewJPG" value="@doc.DocPath.Substring(1)" fileId="@doc.Id">
                                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-filetype-jpg" viewBox="0 0 16 16">
                                                                        <path fill-rule="evenodd" d="M14 4.5V14a2 2 0 0 1-2 2h-1v-1h1a1 1 0 0 0 1-1V4.5h-2A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v9H2V2a2 2 0 0 1 2-2h5.5zm-4.34 8.132q.114.23.14.492h-.776a.8.8 0 0 0-.097-.249.7.7 0 0 0-.17-.19.7.7 0 0 0-.237-.126 1 1 0 0 0-.299-.044q-.428 0-.665.302-.234.301-.234.85v.498q0 .351.097.615a.9.9 0 0 0 .304.413.87.87 0 0 0 .519.146 1 1 0 0 0 .457-.096.67.67 0 0 0 .272-.264q.09-.164.091-.363v-.255H8.24v-.59h1.576v.798q0 .29-.097.55a1.3 1.3 0 0 1-.293.458 1.4 1.4 0 0 1-.495.313q-.296.111-.697.111a2 2 0 0 1-.753-.132 1.45 1.45 0 0 1-.533-.377 1.6 1.6 0 0 1-.32-.58 2.5 2.5 0 0 1-.105-.745v-.506q0-.543.2-.95.201-.406.582-.633.384-.228.926-.228.357 0 .636.1.28.1.48.275t.314.407ZM0 14.786q0 .246.082.465.083.22.243.39.165.17.407.267.246.093.569.093.63 0 .984-.345.357-.346.358-1.005v-2.725h-.791v2.745q0 .303-.138.466t-.422.164a.5.5 0 0 1-.454-.246.6.6 0 0 1-.073-.27H0Zm4.92-2.86H3.322v4h.791v-1.343h.803q.43 0 .732-.172.305-.177.463-.475.162-.302.161-.677 0-.374-.158-.677a1.2 1.2 0 0 0-.46-.477q-.3-.18-.732-.179Zm.546 1.333a.8.8 0 0 1-.085.381.57.57 0 0 1-.238.24.8.8 0 0 1-.375.082H4.11v-1.406h.66q.327 0 .512.182.185.181.185.521Z" />
                                                                    </svg>
                                                                    Abrir
                                                                </button>
                                                            </li>
                                                            <li>
                                                                <button class="btn px-3 ddBtn ButtonDownload mb-2 mt-2" value="@doc.DocPath">
                                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-download" viewBox="0 0 16 16">
                                                                        <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5" />
                                                                        <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708z" />
                                                                    </svg>
                                                                    Descargar
                                                                </button>
                                                            </li>
                                                            <li>
                                                                <button class="btn px-3 ddBtn ButtonDelete" value="@doc.Id">
                                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                                                                        <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z" />
                                                                    </svg>
                                                                    Eliminar
                                                                </button>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                }
                                                @if (doc.DocPath.EndsWith(".pdf"))
                                                {
                                                    <div class="dropdown">
                                                        <button data-toggle="dropdown" class="btn btn-outline-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-three-dots" viewBox="0 0 16 16">
                                                                <path d="M3 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3m5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3m5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3" />
                                                            </svg>
                                                        </button>

                                                        <ul class="dropdown-menu">
                                                            <li>
                                                                <a class="btn px-3 ddBtn ButtonViewPDF" href="@doc.DocPath.Substring(1)" target="_blank">
                                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-filetype-pdf" viewBox="0 0 16 16">
                                                                        <path fill-rule="evenodd" d="M14 4.5V14a2 2 0 0 1-2 2h-1v-1h1a1 1 0 0 0 1-1V4.5h-2A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v9H2V2a2 2 0 0 1 2-2h5.5zM1.6 11.85H0v3.999h.791v-1.342h.803q.43 0 .732-.173.305-.175.463-.474a1.4 1.4 0 0 0 .161-.677q0-.375-.158-.677a1.2 1.2 0 0 0-.46-.477q-.3-.18-.732-.179m.545 1.333a.8.8 0 0 1-.085.38.57.57 0 0 1-.238.241.8.8 0 0 1-.375.082H.788V12.48h.66q.327 0 .512.181.185.183.185.522m1.217-1.333v3.999h1.46q.602 0 .998-.237a1.45 1.45 0 0 0 .595-.689q.196-.45.196-1.084 0-.63-.196-1.075a1.43 1.43 0 0 0-.589-.68q-.396-.234-1.005-.234zm.791.645h.563q.371 0 .609.152a.9.9 0 0 1 .354.454q.118.302.118.753a2.3 2.3 0 0 1-.068.592 1.1 1.1 0 0 1-.196.422.8.8 0 0 1-.334.252 1.3 1.3 0 0 1-.483.082h-.563zm3.743 1.763v1.591h-.79V11.85h2.548v.653H7.896v1.117h1.606v.638z" />
                                                                    </svg>
                                                                    Abrir
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <button class="btn px-3 ddBtn ButtonDownload mb-2 mt-2" value="@doc.DocPath">
                                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-download" viewBox="0 0 16 16">
                                                                        <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5" />
                                                                        <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708z" />
                                                                    </svg>
                                                                    Descargar
                                                                </button>
                                                            </li>
                                                            <li>
                                                                <button class="btn px-3 ddBtn ButtonDelete" value="@doc.Id">
                                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                                                                        <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z" />
                                                                    </svg>
                                                                    Eliminar
                                                                </button>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                }
                                                @if (!doc.DocPath.EndsWith(".jpg") && !doc.DocPath.EndsWith(".pdf"))
                                                {

                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts {
    <script src="~/Content/scripts/homeAdmin.js"></script>
    <script src="~/Content/DataTables/datatables.min.js"></script>
}